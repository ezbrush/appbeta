{{#> principal}}
    {{#*inline "content"}}

        <section class="content-header">
            <h1>

                Gestion de categorias

            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="/categorias">Categoria</a></li>
                <li class="active">Nuevo</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content" >
            <div class="row" >
                <div class="col-lg-10">
                    <div class="box box-primary" >
                        <div class="box-header with-border">
                            <h3 class="box-title">Nueva categoria</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form role="form" method="post" href="/categorias/store">
                            <div class="box-body">

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="nombreInput">Nombre</label>
                                            <input type="text" name="cat_nombre" class="form-control" style="color: #0a0a0a" id="nombreInput" placeholder="Nombre de la nueva categoria" autofocus>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="descripcionInput">Descripcion</label>
                                            <input type="text" name="cat_desc" class="form-control" style="color: #0a0a0a" id="descripcionInput" placeholder="Escriba alguna descripcion">
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="exampleInputFile">File input</label>
                                            <input type="file" id="exampleInputFile">
                                        </div>
                                    </div>


                                    <p class="help-block">Example block-level help text here.</p>
                                </div>

                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </section>


    {{/inline}}

    {{#*inline "script"}}

    {{/inline}}
{{/principal}}
