{{#> principal}}
    {{#*inline "content"}}

        <section class="content-header">
            <h1>

                Gestion de estante

            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="/almacenes">Almacen</a></li>
                <li class="active">Nuevo</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content" >
            <div class="row" >
                <div class="col-lg-10">
                    <div class="box box-primary" >
                        <div class="box-header with-border">
                            <h3 class="box-title">Nuevo almacen</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form role="form" method="post" href="/almacenes/store">
                            <div class="box-body">

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="nombreInput">Nombre</label>
                                            <input type="text" name="stn_nomb" class="form-control" style="color: #0a0a0a" id="nombreInput" placeholder="Nombre del estante" autofocus>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="tipoInput">Tipo</label>
                                            <input type="text" name="stn_tipo" class="form-control" style="color: #0a0a0a" id="tipoInput" placeholder="Escriba el tipo">
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="mdloInput">Mdlo</label>
                                            <input type="text" name="stn_mdlo" class="form-control" style="color: #0a0a0a" id="mdloInput" placeholder="Escriba mdlo">
                                        </div>
                                    </div>

                                </div>


                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </section>


    {{/inline}}

    {{#*inline "script"}}

    {{/inline}}
{{/principal}}
