{{#> principal}}
    {{#*inline "content"}}

        <section class="content-header">
            <h1>
                Gestion de productos

            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="/productos">Producto</a></li>
                <li class="active">Lista</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="box float-e-margins">
                        <div class="box-header">
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i></button>

                            </div>


                            <div class="row" style="padding: 1%;">
                                <div class="col-md-2">
                                    <a href="/productos/create" class="btn btn-block btn-primary"><i class="fa fa-plus"></i>Nueva producto</a>
                                </div>
                            </div>
                            <h2 class="box-title" style="padding: 1%;">Lista de productos</h2>

                        </div>
                        <!-- /.box-header -->

                        <div class="box-body">
                            <table id="tabla" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Nombre</th>
                                    <th>Marca</th>
                                    <th>Categoria</th>
                                    <th>Precio</th>
                                    <th>Descripcion</th>
                                    <th>Accion</th>
                                </tr>
                                </thead>
                                <tbody>

                                {{#each productos}}
                                    <tr>
                                        <td>{{pro_id}}</td>
                                        <td>{{pro_nomb}}</td>
                                        <td>{{pro_mrc}}</td>
                                        <td>{{pro_cat}}</td>
                                        <td>{{pro_prec}}</td>
                                        <td>{{pro_desc}}</td>
                                        <td>
                                            <a class="btn btn-w-m btn-info" href="/productos/edit/{{pro_id}}"><i class="fa fa-edit"></i> Editar</a>
                                            <a class="btn btn-w-m btn-danger" href="/productos/delete/{{pro_id}}"><i class="fa fa-trash-o"></i> Eliminar</a>
                                        </td>
                                    </tr>
                                {{/each}}

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Nro</th>
                                    <th>Nombre</th>
                                    <th>Marca</th>
                                    <th>Categoria</th>
                                    <th>Precio</th>
                                    <th>Descripcion</th>
                                    <th>Accion</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>

        </section>


    {{/inline}}

    {{#*inline "script"}}
        <!-- DataTables -->
        <script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
        <script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

        <!-- page script -->
        <script>
            $(function () {
                $('#tabla').DataTable({
                    'paging'      : true,
                    'lengthChange': false,
                    'searching'   : true,
                    'ordering'    : true,
                    'info'        : true,
                    'autoWidth'   : true,
                    'language': {
                        'url': '//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json',
                    }
                })
            })
        </script>
    {{/inline}}
{{/principal}}